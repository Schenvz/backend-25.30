<main class="flex-grow-1 m-auto w-100 d-flex flex-column">
  <section
    id="clothes"
    class="flex-grow-1 d-flex flex-column justify-content-evenly align-items-center w-100 mt-2 mb-4"
  >
    <img
      src="{{clothes.poster}}"
      style="height: 420px; width: 100%"
      class="object-fit-cover"
      alt="{{clothes.title}}"
    />
    <article
      class="d-flex flex-column justify-content-center align-items-center"
    >
      <h2
        id="clothesname"
        class="subtitle mt-4 mb-2 text-center"
      >{{clothes.name}}</h2>
      <h5 class="p-2 text-center card-title">Precio:
        {{clothes.price}}</h5>
      <h5 class="p-2 text-center card-title">Pais de origen:
        {{clothes.place}}</h5>
        <input id={{event._id}} class="addToCart btn btn-danger fs-5 m-1 me-3" type="button" value="Add to cart!">
    </article>
  </section>
</main>
<script src="../../public/scripts/addToCart.js"></script>